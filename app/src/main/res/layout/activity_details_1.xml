<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backdropImageView"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wonder_woman_backdrop"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/wonder_woman_poster"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/backdropImageView"
        app:layout_constraintTop_toTopOf="@+id/backdropImageView"
        android:layout_marginTop="164dp" />

    <TextView
        android:id="@+id/movieNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Wonder Woman"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backdropImageView"
        app:layout_constraintLeft_toRightOf="@+id/posterImageView"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/releaseYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2017"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toBottomOf="@+id/movieNameTextView"
        app:layout_constraintLeft_toLeftOf="@+id/movieNameTextView"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/movieDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="120 min"
        android:textColor="@android:color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toBottomOf="@+id/movieNameTextView"
        app:layout_constraintLeft_toRightOf="@+id/releaseYearTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/movieOverviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/white"
        tools:text="An amazon princess comes to the world of Man to become the greatest of the female superheroes."
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/posterImageView" />

    <RatingBar
        android:id="@+id/movieRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/releaseYearTextView"
        android:numStars="5"
        tools:rating="3"
        android:isIndicator="true"
        android:layout_marginTop="8dp"
        android:stepSize="0.5"
        app:layout_constraintTop_toBottomOf="@+id/movieDurationTextView" />

</android.support.constraint.ConstraintLayout>
